    "compilerOptions": {
        "rootDir": ".",
        "outDir": "../dist",
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "strict": true,
        "noEmit": true,
        "declarationDir": "./dist",
        "declaration": true,
        "esModuleInterop": true,
        "types": ["node"]
    }
